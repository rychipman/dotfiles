							"to_if_alone": [{ "key_code": "escape" }]
						}]
					},
					{
						"description": "Change return to command (return if pressed alone).",
						"manipulators": [{
							"type": "basic",
							"from": { "key_code": "return_or_enter" },
							"to": [{ "key_code": "left_command" }],
							"to_if_alone": [{ "key_code": "return_or_enter" }]
						}]
					}
				]
            }

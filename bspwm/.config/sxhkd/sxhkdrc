
super + Return
    lxterminal --working-directory=/home/rchipman

control + Tab
    ~/bin/launcher -l

super + p
    rofi-pass

XF86Audio{RaiseVolume,LowerVolume,Mute}
    sudo ~/bin/volume -{i,d,t}

XF86MonBrightness{Up,Down}
    sudo ~/bin/backlight -{i,d}

super + BackSpace
    ~/bin/lock

# bspwm bindings

super + q
    pkill dunst redshift unclutter sxhkd; \
    bspc quit

super + r
    pkill -USR1 sxhkd

super + {i,o}
    bspc node --focus {prev,next}

super + {comma,period}
    bspc desktop --focus {next,prev}

super + h
    bspc desktop --focus home

super + k
    ~/bin/bspwm/raise-or-open firefox

super + j
    ~/bin/bspwm/raise-or-open lxterminal

super + l
    ~/bin/bspwm/raise-or-open slack

super + w
    bspc node --close

super + f
    state=fullscreen; \
    bspc query -N --node focused.fullscreen && state=tiled; \
    bspc node --state $state

super + m
    state=monocle; \
    bspc query -T -d | grep monocle && state=tiled; \
    bspc desktop --layout $state

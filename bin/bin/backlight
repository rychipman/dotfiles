#!/bin/bash

step=50
min=10
max=600
start=200
file=/sys/class/backlight/intel_backlight/brightness

while getopts "idcmMs" opt; do
  case $opt in
    i)
        current="$(cat $file)"
        new="$((current + step))"
        echo $new > $file
      ;;
    d)
        current="$(cat $file)"
        new="$((current - step))"
        echo $new > $file
      ;;
    c)
        cat $file
        exit 0
      ;;
    m)
        echo $min > $file
      ;;
    M)
        echo $max > $file
      ;;
    s)
        echo $start > $file
      ;;
  esac
done
